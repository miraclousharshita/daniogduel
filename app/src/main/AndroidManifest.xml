<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="eu.tutorials.daniogduel">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Daniogduel">
        <activity
            android:name=".itis.baseActivity"
            android:exported="true" />
        <activity
            android:name=".itis.splashactivity1"
            android:exported="true" />
        <activity
            android:name=".itis.SigninActivity"
            android:exported="true" />
        <activity
            android:name=".itis.SignupActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Daniogduel.NoActionBar" />
        <activity
            android:name=".itis.IntroActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Daniogduel.NoActionBar" />
        <activity
            android:name=".itis.splashActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Daniogduel.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".itis.MainActivity"
            android:exported="true" />
    </application>

</manifest>